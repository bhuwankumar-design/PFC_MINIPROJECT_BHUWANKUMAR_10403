// write a program Armstrong number Checker only for 3 digut number
#include <stdio.h>
int main() {
    int n, temp, digit, count = 0;
    int sum = 0, power, i;

    printf("Enter a number: ");
    scanf("%d", &n);

    temp = n;
    while (temp != 0) {
        count++;
        temp = temp / 10;
    }
    temp = n;
    while (temp != 0) {
        digit = temp % 10;
        power = 1;
        for (i = 1; i <= count; i++) {
            power = power * digit;
        }
        sum = sum + power;
        temp = temp / 10;
    }
    if (sum == n)
        printf("The number is an Armstrong number");
    else
        printf("The number is NOT an Armstrong number");

    return 0;
}
